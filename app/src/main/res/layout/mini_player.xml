<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_current_track_albumart"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:src="@drawable/ic_music"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageview_mini_play_pause"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_pause_copy"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_current_track_albumart"
            app:layout_constraintEnd_toStartOf="@+id/imageview_next_track"
            app:layout_constraintTop_toTopOf="@+id/imageview_current_track_albumart" />

        <TextView
            android:id="@+id/textview_current_track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:hint="Track title"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/textview_current_track_artist"
            app:layout_constraintEnd_toStartOf="@+id/imageview_mini_play_pause"
            app:layout_constraintStart_toEndOf="@+id/imageview_current_track_albumart"
            app:layout_constraintTop_toTopOf="@+id/imageview_current_track_albumart" />

        <TextView
            android:id="@+id/textview_current_track_artist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:hint="Track artist"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_current_track_albumart"
            app:layout_constraintEnd_toStartOf="@+id/imageview_mini_play_pause"
            app:layout_constraintStart_toEndOf="@+id/imageview_current_track_albumart"
            app:layout_constraintTop_toBottomOf="@+id/textview_current_track_title" />

        <ImageView
            android:id="@+id/imageview_next_track"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_next_copy"
            app:layout_constraintBottom_toBottomOf="@+id/imageview_mini_play_pause"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageview_mini_play_pause" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>